@model _23DH114665_MyStore.Models.ViewModel.HomeProductVM
@using PagedList.Mvc
<link rel="stylesheet" type="text/css" href="~/Content/myStyle/CustomerHome.css" />

<!-- Hiển thị danh sách sản phẩm -->
@if (Model.NewProducts != null && Model.NewProducts.Any())
{
    <section class="container-fluid ListProduct">
        <h2>Sản phẩm mới</h2>
        <div class="List-container">
            @foreach (var product in Model.NewProducts)
             {
                    <div class="lproduct-item">
                        <div class="box-lprod">
                             <a href="@Url.Action("ProductDetails","Home", new {id = product.ProductID})">
                                 <img src="@Html.DisplayFor(modelItem => product.ProductImage)"/>
                             </a>
                        </div>
                        <div>
                            <p class="prodPrice">
                                @Html.DisplayFor(modelItem => product.ProductPrice)</p>
                            <p class="prodName">
                                @Html.DisplayFor(modelItem => product.ProductName)</p>
                            <p class="prodSale">
                                Đã bán:&nbsp;@Html.DisplayFor(modelItem => product.OrderDetails.Count)</p>
                        </div>
                    </div>
             }
        </div>
    </section>
    <hr />
    <!-- Hiển thị phân trang -->
    <div class="pagination-container">
        @Html.PagedListPager(Model.NewProducts, Page => Url.Action("Index", new{
                                                Page, SearchTerm = Model.SearchTerm}))
    </div>
 }
else
{
    <p>Không tìm thấy sản phẩm phù hợp</p>
}
<hr />
